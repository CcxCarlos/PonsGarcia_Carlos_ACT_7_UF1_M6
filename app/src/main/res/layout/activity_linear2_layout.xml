<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".LinearLayoutActivity">

    <ImageButton
        android:id="@+id/buttonLinearLayoutBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="switchAct"
        android:contentDescription="@string/ic_back"
        android:background="@null"
        android:src="@drawable/ic_arrow_back" />

    <ToggleButton
        android:id="@+id/toggleButtonLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/toggle_style"
        android:textColor="@color/cian"
        android:textOff="@string/off"
        android:textOn="@string/on" />

    <ImageButton
        android:id="@+id/buttonLinearLayoutForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:onClick="switchAct"
        android:contentDescription="@string/ic_next"
        android:background="@null"
        android:src="@drawable/ic_arrow_forward" />

</LinearLayout>