<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="4"
    android:columnCount="3"
    android:orientation="horizontal"
    tools:context=".GridLayoutActivity">

    <Switch
        android:id="@+id/switchButtonGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tema"
        android:switchPadding="10dp"
        android:layout_columnSpan="3"
        android:layout_gravity="right"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/txtGrid"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-black"
        android:text="Grid Layout"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="30dp"/>

    <TextView
        android:id="@+id/txtGrid2"
        android:layout_columnWeight="1"
        android:text="Celda 1.1"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtGrid3"
        android:layout_columnWeight="1"
        android:text="Celda 1.2"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtGrid4"
        android:layout_columnWeight="1"
        android:text="Celda 1.3"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtGrid5"
        android:layout_columnWeight="1"
        android:text="Celda 2.1"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtGrid6"
        android:layout_columnWeight="1"
        android:text="Celda 2.2"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtGrid7"
        android:layout_columnWeight="1"
        android:text="Celda 2.3"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/imgGrid"
        android:layout_width="213dp"
        android:layout_height="278dp"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:src="@drawable/ccximg"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/buttonGridLayoutBack"
        android:layout_gravity="left"
        android:layout_columnSpan="1"
        android:onClick="switchAct"
        android:contentDescription="@string/ic_back"
        android:background="@null"
        android:src="@drawable/ic_arrow_back" />

    <ToggleButton
        android:id="@+id/toggleButtonGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/toggle_style"
        android:textColor="@color/cian"
        android:textOff="@string/off"
        android:textOn="@string/on" />

    <ImageButton
        android:id="@+id/buttonGridLayoutForward"
        android:layout_gravity="right"
        android:layout_columnSpan="1"
        android:text="Next Layout"
        android:onClick="switchAct"
        android:contentDescription="@string/ic_next"
        android:background="@null"
        android:src="@drawable/ic_arrow_forward" />

</GridLayout>
